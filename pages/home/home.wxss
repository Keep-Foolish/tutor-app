/* pages/home/home.wxss */
/*轮播图*/
.swiperContainer{
  height: 350rpx;
  width: 750rpx;
}

swiper-item image{
  width: 100%;
  height: 100%;
  border-radius: 50rpx;
}

/* 按钮 */
.buttoncontainer{
  margin-top: 75rpx;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  height: 100%;
  padding-left: 15px;
  padding-right: 15px;
}

.buttoncontainer image{
  width: 160rpx;
  height: 160px;
  margin-top: 30rpx;
}

.button{
  margin:20rpx,20rpx,20rpx,20rpx;
  width: 35%;
  height: 280rpx;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  align-items: center;
  border-radius: 40rpx;
}

.button text{
  margin-bottom: 25rpx;
}

.buttoncontainer view{
  border: 2px solid #524e4e;
  margin-bottom: 50rpx;
}